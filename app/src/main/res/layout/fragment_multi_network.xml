<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_scan_cell_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="扫描可用蜂窝网络" />


            <Button
                android:id="@+id/btn_scan_wifi_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="扫描可用wifi网络" />

            <Button
                android:id="@+id/btn_use_cell_network_bind_process_and_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用蜂窝网络并绑定进程和network" />

            <Button
                android:id="@+id/btn_use_cell_network_bind_process_with_okhttp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用蜂窝网络并绑定进程并使用OkHttp" />
            <Button
                android:id="@+id/btn_use_cell_network_with_okhttp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用蜂窝网络不绑定进程并使用OkHttp" />

            <Button
                android:id="@+id/btn_connect_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="连接相机" />

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="拍摄" />

            <Button
                android:id="@+id/btn_use_cell_network_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用蜂窝网络上传OSS" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>